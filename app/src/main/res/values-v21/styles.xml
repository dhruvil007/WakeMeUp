<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorHightlight</item>
        <item name="android:colorButtonNormal">@color/colorButtons</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:actionDropDownStyle">@style/ToolbarDropDownTheme</item>
    </style>

    <style name="SettingsBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CancelButtonTheme" parent="AppThemeBase">
        <item name="android:colorAccent">@android:color/holo_red_dark</item>
        <item name="android:colorButtonNormal">@android:color/holo_red_dark</item>
    </style>

    <style name="ToolbarDropDownTheme">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
